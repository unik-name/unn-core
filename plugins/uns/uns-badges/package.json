{
    "name": "@uns/badges",
    "version": "4.1.0",
    "private": true,
    "description": "NFT Badges plugin for UNIKs token",
    "license": "MIT",
    "contributors": [
        "Fabien Tr√©guer <fabien@unik-name.com>",
        "Pierre Seznec <pierre.seznec@spacelephant.org>"
    ],
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "yarn clean && yarn compile",
        "build:watch": "yarn clean && yarn compile -w",
        "clean": "del dist",
        "compile": "../../../node_modules/typescript/bin/tsc",
        "prepublishOnly": "yarn build",
        "test": "jest --runInBand",
        "test:coverage": "jest --coverage --coveragePathIgnorePatterns='/(defaults.ts|index.ts)$' --runInBand --forceExit"
    },
    "dependencies": {
        "@arkecosystem/core-api": "^2.6.31",
        "@arkecosystem/core-interfaces": "^2.6.31",
        "@uns/core-nft": "^5.2.0-dev",
        "@uns/crypto": "^5.2.0-dev",
        "@hapi/boom": "^8.0.0",
        "@hapi/hapi": "^18.3.1"
    },
    "devDependencies": {
        "@types/hapi__boom": "^7.4.0",
        "@types/hapi__hapi": "^18.2.5"
    },
    "publishConfig": {
        "access": "public"
    },
    "jest": {
        "testEnvironment": "node",
        "bail": true,
        "verbose": true,
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testMatch": [
            "**/*.test.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "collectCoverage": false,
        "watchman": false
    }
}
